<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_booknow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.touristadev.tourista.activities.BooknowActivity">

    <TextView
        android:text="Credentials"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:layout_alignParentEnd="true" />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView5"
        android:id="@+id/edtDate"
        android:focusable="false"
        android:textSize="34sp"
        app:met_baseColor="@android:color/black"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="20"
        app:met_primaryColor="@color/tourColor"
        app:met_singleLineEllipsis="true" />
    <TextView
        android:layout_below="@+id/edtDate"
        android:text="Select number of Persons "
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_alignParentStart="true"
        android:id="@+id/txt4"
        android:layout_alignParentEnd="true" />
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spnTourGuides"
        android:layout_below="@+id/txt4"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

    <com.jaredrummler.materialspinner.MaterialSpinner

        android:id="@+id/spinLang"
        android:layout_below="@+id/txt6"
        android:layout_width="match_parent"

        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Check out with PayPal"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCheckout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="134dp" />

    <TextView
        android:text="Select preffered Language"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/txt6"

        android:layout_below="@+id/spnTourGuides"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
