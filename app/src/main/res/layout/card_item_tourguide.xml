<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    card_view:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="133dp"
            android:layout_height="180dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/txtTGName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="14dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:text="TextView"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/txtSpotName"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/txtSpotName"
            android:layout_alignParentEnd="true"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMotto"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/rtTGBar"
            android:layout_toStartOf="@+id/imgCard"
            android:layout_below="@+id/txtAge" />

        <RatingBar
            android:id="@+id/rtTGBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:isIndicator="true"
            android:paddingLeft="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAge"
            android:layout_below="@+id/txtTGName"
            android:layout_alignEnd="@+id/txtTGName" />

    </RelativeLayout>

</android.support.v7.widget.CardView>