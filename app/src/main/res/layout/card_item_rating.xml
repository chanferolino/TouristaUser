<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    card_view:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtTGName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="14dp"
            android:text="TextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/imgCard" />

        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="133dp"
            android:layout_height="180dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_above="@+id/rtTGBar"
            android:layout_centerHorizontal="true" />

        <RatingBar
            android:id="@+id/rtTGBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="5dp"
            android:isIndicator="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Professional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPro"
            android:textSize="14sp"
            android:layout_above="@+id/rtTGBar"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Knowledgable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtKnow"
            android:textSize="14sp"
            android:layout_below="@+id/txtTGName"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:id="@+id/rtKnowledge"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="5dp"
            android:isIndicator="false"
            android:layout_below="@+id/txtKnow"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:id="@+id/rtPersonality"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="5dp"
            android:isIndicator="false"
            android:layout_below="@+id/txtPersonality"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Personality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPersonality"
            android:textSize="14sp"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/rtKnowledge"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:id="@+id/rtPackage"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="5dp"
            android:isIndicator="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>